# ==========================================
# Islamic Finance Workflows - Backend Config
# ==========================================

# ==========================================
# AI API Keys (REQUIRED)
# ==========================================

# Anthropic Claude API Key
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (for Graphiti embeddings)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# LlamaParse API Key (for intelligent PDF parsing)
# Get your API key from: https://cloud.llamaindex.ai/
LLAMAPARSE_API_KEY=your_llamaparse_api_key_here

# ==========================================
# Neo4j Connection (REQUIRED)
# ==========================================

# Get Neo4j credentials from: https://neo4j.com/cloud/aura/
NEO4J_URI=neo4j+ssc://your_instance_id.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# ==========================================
# FastAPI Configuration
# ==========================================

API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3030,http://localhost:3000,http://localhost:3001

# ==========================================
# Claude Configuration
# ==========================================

CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=16384
CLAUDE_TEMPERATURE=0.7

# ==========================================
# Document Storage
# ==========================================

UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs

# ==========================================
# Langfuse (LLM Observability & Tracing)
# Optional: For production monitoring
# ==========================================

# LANGFUSE_SECRET_KEY=your_langfuse_secret_key
# LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
# LANGFUSE_HOST=https://cloud.langfuse.com

# ==========================================
# Logging
# ==========================================

LOG_LEVEL=INFO
DEBUG=true
